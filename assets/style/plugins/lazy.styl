.lazy
  // background-color: #cecece
  position: relative
  img
    backface-visibility: hidden
    height: 100%
    opacity: 0
    transition: opacity 0.5s
    width: 100%

  [lazy=loading]
    opacity: 0.1

  [lazy=loaded]
    opacity: 1

  [lazy=loading] + .spinner
    opacity: 1

  .spinner
    left: 50%
    margin: -20px
    opacity: 0
    position: absolute
    top: 50%
